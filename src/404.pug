extends layouts/blank

block vars
    - var canonical = "/404/";
    - var title = "404";
    - var description = 'Page Not Found';

block styles
  style.
    body {
      font-family: Helvetica, sans-serif;
    }
    .notfound-container {
      position:relative;
      width: 100%; height: 100%;
      top:0; left: 0;
      background: #fff;
      z-index: 500;
    }
      
    .notfound-text {
      position: absolute;
      width: 100%;
      top: 50%;
      left: 50%;
      font-weight: 100;
      transform: translate(-50%, -50%);
      z-index: 100;
      text-align: center;
    }
block content   
  .notfound-container
    p.notfound-text: i This is not the page you are looking for~